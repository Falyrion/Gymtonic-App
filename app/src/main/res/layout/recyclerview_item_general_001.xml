<?xml version="1.0" encoding="utf-8"?>

<!-- Used in Activity_Workout_EditRoutines to display existing routines -->
<!-- Used in Activity_Workout_EditPlans to display existing plans -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_box_round_middle"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_middle"
            android:background="@null"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonDeleteItem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="#00FFFFFF"
        android:layout_gravity="center"
        app:tint="@color/text_middle"
        android:src="@drawable/ic_baseline_delete_24" />

</LinearLayout>